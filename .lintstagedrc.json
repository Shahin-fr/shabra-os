{
  "*.{ts,tsx,js,jsx}": [
    "eslint --fix --config eslint.config.mjs",
    "prettier --write",
    "npm run type-check -- --noEmit"
  ],
  "*.{json,md,yml,yaml}": ["prettier --write"],
  "*.{ts,tsx}": ["npm run type-check -- --noEmit"],
  "src/**/*.{ts,tsx}": [
    "npm run test:unit -- --run --reporter=verbose",
    "npm run test:accessibility -- --run"
  ]
}
